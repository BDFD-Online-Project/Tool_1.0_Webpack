{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "global-require": "off",
    "no-console": "off",
    "spaced-comment": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-shadow": "off",
    "import/first": "off",
    "import/no-unresolved": "off", //需要配置通用后缀名，一般不建议关闭
    "import/extensions": "off" //需要配置通用后缀名，一般不建议关闭
  }
}
